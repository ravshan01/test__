{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "classnames|^react|storybook|vitest",
    "reflect-metadata|inversify",
    "^antd|^@ant",
    "<THIRD_PARTY_MODULES>",
    "(@\\/|[^\\/]+\\/)(?!.*images)(?!.*\\.(css|scss|sass)).+$",
    "images|.(css|scss|sass)"
  ],
  "importOrderSeparation": true,
  "importOrderParserPlugins": [
    "typescript",
    "jsx",
    "decorators-legacy"
  ]
}
